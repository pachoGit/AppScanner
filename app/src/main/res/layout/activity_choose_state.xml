<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseStateActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="294dp"
        android:layout_height="29dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="35dp"
        android:text="EL CÃ“DIGO DE BARRAS ES:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnTakePictureAgain"
        android:layout_width="215dp"
        android:layout_height="59dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="160dp"
        android:text="VOLVER A ESCANEAR"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textCodeBar"
        android:layout_width="298dp"
        android:layout_height="34dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="89dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDelivered"
        android:layout_width="246dp"
        android:layout_height="72dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="540dp"
        android:text="ENTREGADO"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnRefused"
        android:layout_width="246dp"
        android:layout_height="72dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="640dp"
        android:text="RECHAZADO"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="127dp"
        android:layout_height="127dp"
        android:layout_marginStart="131dp"
        android:layout_marginTop="234dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btnAddExtra"
        android:layout_width="215dp"
        android:layout_height="56dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="28dp"
        android:text="Seleccione extra imagenes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <HorizontalScrollView
        android:layout_width="335dp"
        android:layout_height="91dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAddExtra">

        <LinearLayout
            android:id="@+id/imageContainer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" />
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>